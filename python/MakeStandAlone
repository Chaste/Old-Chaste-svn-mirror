REV=`svn info| awk '/Revision/{print $2}'`
UNAME=`uname -m` 
if [[ 'i686' == $UNAME ]]; then
	BITS=32
else
	BITS=64
fi

NAME=StandaloneChaste_r${REV}_${BITS}bit
echo $NAME
scons build=GccOpt static=1 chaste_libs=1 exe=1 compile_only=1 apps
mkdir $NAME
cp apps/src/Chaste $NAME
cat ChasteDefaults.xml   | sed s:heart/src/io/:: > $NAME/ChasteDefaults.xml 
cat ChasteParameters.xml | sed s:heart/src/io/:: > $NAME/ChasteParameters.xml 
cp README_STANDALONE $NAME/README
cp heart/src/io/ChasteParameters.xsd $NAME
tar cvfz $NAME.tgz $NAME
scp $NAME.tgz  root@chaste.ediamond.ox.ac.uk:/var/www/html/chaste/downloads/
