<?xml version="1.0" encoding="UTF-8"?>
<ChasteParameters
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="heart/src/io/ChasteParameters.xsd">

	<!-- 
		Problem definition 
	-->    
    <SimulationDuration>200.0</SimulationDuration>
    <Domain>Bi</Domain>
    <IonicModel>FaberRudy2000Version3</IonicModel>
    
	<!-- 
		Mesh definition 
	-->    
    <SlabX>4.0</SlabX>
    <SlabY>0.1</SlabY>
    <SlabZ>2.0</SlabZ>
    <InterNodeSpace>0.1</InterNodeSpace>

    <!--
        Intracellular conductivities
    -->
    <LongitudinalConductivity>1.75</LongitudinalConductivity>
    <TransverseConductivity>1.75</TransverseConductivity>
    <NormalConductivity>1.75</NormalConductivity>   
    
    <!-- 
    	Stimuli (as many <Stimulus> definitions as needed) 
   	-->
  	<Stimulus> <!-- #1 -->
		<Strength>-35500.0</Strength>
		<Duration>0.5</Duration>
		<Delay>0</Delay>
		<Location>
			<CornerA X="-2.0" Y="-0.1" Z="-1.0"/>
			<CornerB X="-1.9" Y="0.1" Z="1.0"/>
		</Location>
	</Stimulus>	

    <!-- 
    	Ionic cell model heterogeneities (as many <CellHeterogeneity> definitions as needed) 
   	-->
  	<CellHeterogeneity> <!-- #1 -->
		<ScaleFactorGks>0.462</ScaleFactorGks>
		<ScaleFactorIto>0.0</ScaleFactorIto>
		<Location>
			<CornerA X="-2.0" Y="-0.1" Z="-1.0"/>
			<CornerB X="-0.5" Y="0.1" Z="1.0"/>
		</Location>
	</CellHeterogeneity>	

  	<CellHeterogeneity> <!-- #2 -->
		<ScaleFactorGks>1.154</ScaleFactorGks>
		<ScaleFactorIto>0.85</ScaleFactorIto>
		<Location>
			<CornerA X="-0.5" Y="-0.1" Z="-1.0"/>
			<CornerB X="0.5" Y="0.1" Z="1.0"/>
		</Location>
	</CellHeterogeneity>	

  	<CellHeterogeneity> <!-- #3 -->
		<ScaleFactorGks>1.154</ScaleFactorGks>
		<ScaleFactorIto>1.0</ScaleFactorIto>
		<Location>
			<CornerA X="0.5" Y="-0.1" Z="-1.0"/>
			<CornerB X="2.0" Y="0.1" Z="1.0"/>
		</Location>
	</CellHeterogeneity>	
	
	<!-- 
		Output 
	-->
	<OutputDirectory>ChasteResults</OutputDirectory>
    <MeshOutputDirectory>Slab</MeshOutputDirectory>	
</ChasteParameters>
