<?xml version="1.0"?>
<pycml_config>

<!--
  Override the default lookup table bounds for LR91:
  needed for the backward Euler model in convergence/performance tests.
-->
  <for_model id="luo_rudy_1991">
  <lookup_tables>
    <lookup_table>
      <var type='config-name'>transmembrane_potential</var>
      <min>-150.0001</min>
      <max>199.9999</max>
    </lookup_table>
    <lookup_table>
      <var type="name">intracellular_calcium_concentration,Cai</var>
      <min>0.00001</min><!-- Can't do log(0) -->
      <max>30.00001</max>
      <step>0.0005</step>
    </lookup_table>
  </lookup_tables>
</for_model>

</pycml_config>