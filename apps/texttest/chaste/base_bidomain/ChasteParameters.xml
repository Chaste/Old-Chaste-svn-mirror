<?xml version="1.0" encoding="UTF-8"?>
<ChasteParameters
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="ChasteParameters.xsd">

	<Simulation>       
		<!-- 
			Problem definition 
		-->    
	    <SimulationDuration>4.0</SimulationDuration>
	    <Domain>Bi</Domain>
	    <IonicModel>BackwardEulerFoxModel2002Modified</IonicModel>
	    
		<!-- 
			Mesh definition 
		-->    
		<Mesh>
			<Slab>    
		    	<SlabX>0.5</SlabX>
		    	<SlabY>0.5</SlabY>
		    	<SlabZ>0.5</SlabZ>
		    	<InterNodeSpace>0.025</InterNodeSpace>
	    	</Slab>
	  	</Mesh>
		    
	    <!-- 
	    	Stimuli (as many <Stimulus> definitions as needed) 
	   	-->
   		<Stimuli>
		  	<Stimulus> <!-- #1 -->
				<Strength>-80000.0</Strength>
				<Duration>1.0</Duration>
				<Delay>0</Delay>
				<Location>
					<CornerA x="-0.5" y="-0.5" z="-0.5" />
					<CornerB x="-0.45" y="0.5" z="0.5" />
				</Location>
			</Stimulus>	
			<Stimulus> <!-- #2 -->
				<Strength>-80000.0</Strength>
				<Duration>1.0</Duration>
				<Delay>2.0</Delay>
				<Location>
					<CornerA x="-0.5" y="-0.5" z="-0.5"/>
					<CornerB x="0" y="0" z="0.5"/>
				</Location>
			</Stimulus>	
		</Stimuli>
		
		<!-- 
			Output 
		-->
		<OutputDirectory>ChasteResults</OutputDirectory>
		<OutputFilenamePrefix>SimulationResults</OutputFilenamePrefix>
	</Simulation>
	
	<Physiological>
	    <!--
	        Conductivities
	    -->
	    <IntracellularConductivities longi="1.75" trans="1.75" normal="1.75" />
	    <ExtracellularConductivities longi="7.0"  trans="7.0"  normal="7.0" />
	    <SurfaceAreaToVolumeRatio> 1400 </SurfaceAreaToVolumeRatio>
	    <Capacitance> 1.0 </Capacitance>
	</Physiological>

	<Numerical>
		<TimeSteps ode="0.01" pde="0.1" printing="0.1"/>
		<KSPTolerances>
			<KSPRelative>1e-6</KSPRelative>
		</KSPTolerances>
		<KSPSolver>gmres</KSPSolver>
		<KSPPreconditioner>jacobi</KSPPreconditioner>
	</Numerical>		
		    
</ChasteParameters>
