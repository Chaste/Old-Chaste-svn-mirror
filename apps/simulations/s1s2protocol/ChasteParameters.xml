<?xml version="1.0" encoding="UTF-8"?>
<ChasteParameters
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="ChasteParameters.xsd">

	<Simulation>
		<!-- 
			Problem definition 
		-->
		<SpaceDimension>2</SpaceDimension>
	    <SimulationDuration unit="ms">300</SimulationDuration>
	    <Domain>Mono</Domain>
	    <IonicModels>
	    	<Default>FaberRudy2000</Default>
    	</IonicModels>
	    
		<!-- 
			Mesh definition 
		-->
		<Mesh unit="cm">
			<Sheet x="4.0" y="4.0" inter_node_space="0.1"/>    
	  	</Mesh>
	
	    <!-- 
	    	Stimuli (as many <Stimulus> definitions as needed) 
	   	-->
	   	<Stimuli>
		  	<Stimulus> <!-- #1 -->
				<Strength unit="uA/cm^3">-25500.0</Strength>
				<Duration unit="ms">2.0</Duration>
				<Delay unit="ms">0</Delay>
				<Location unit="cm">
					<Cuboid>
						<LowerCoordinates x="0.0" y="0.0" z="0.0"/>
						<UpperCoordinates x="0.1" y="4.0" z="0.1"/>
					</Cuboid>
				</Location>
			</Stimulus>	

		  	<Stimulus> <!-- #2 -->
				<Strength unit="uA/cm^3">-25500.0</Strength>
				<Duration unit="ms">2.0</Duration>
				<Delay unit="ms">220</Delay>
				<Location unit="cm">
					<Cuboid>
						<LowerCoordinates x="0.0" y="0.0" z="0.0"/>
						<UpperCoordinates x="1.0" y="2.0" z="4.0"/>
					</Cuboid>
				</Location>
			</Stimulus>	

		</Stimuli>
		
		<!-- 
			Output 
		-->
		<OutputDirectory>ChasteResults</OutputDirectory>
		<OutputFilenamePrefix>SimulationResults</OutputFilenamePrefix>
	</Simulation>
	
	<Physiological>
	    <!--
	        Conductivities
	    -->
	    <IntracellularConductivities longi="1.75" trans="1.75" normal="1.75" unit="mS/cm"/>
	    <ExtracellularConductivities longi="7.0"  trans="7.0"  normal="7.0" unit="mS/cm"/>
	    <SurfaceAreaToVolumeRatio unit="1/cm"> 1400 </SurfaceAreaToVolumeRatio>
	    <Capacitance unit="uF/cm^2"> 1.0 </Capacitance>
	</Physiological>

	<Numerical>
		<TimeSteps ode="0.005" pde="0.01" printing="0.1" unit="ms"/>
		<KSPTolerances>
			<KSPAbsolute>2e-4</KSPAbsolute>
		</KSPTolerances>
		<KSPSolver>gmres</KSPSolver>
		<KSPPreconditioner>jacobi</KSPPreconditioner>
	</Numerical>

</ChasteParameters>
